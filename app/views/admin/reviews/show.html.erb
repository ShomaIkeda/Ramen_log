
	<div>
		<div class="d-flex">

			<h3><%= @review.title %></h3>
		</div>
		<div class="d-flex">
			<p class="mr-1">食べたメニュー</p>
			<p><%= @review.eated_menu %></p>
		</div>
		<div class="d-flex">
			<p class="mr-1">コメント</p>
			<p><%= @review.comment %></p>
		</div>

	<!--ここからraty-->
	<div class="" id="star">

  <script>
		var elem = document.getElementById("star");
		var opt = {
		    size     : 36,
		    starOff:  '<%= asset_path('star-off.png') %>',
		    starOn : '<%= asset_path('star-on.png') %>',
		    scoreName: 'review[star]',
		    score: <%= @review.star %>,
		    half: false,
		    readOnly: true,
		}

		raty(elem, opt);
  </script>
  </div>
   <!--ここまで-->

		<div class="d-flex">
			<p class="mr-1">投稿者</p>
			<p><%= link_to @review.user.nickname,admin_user_path %></p>
		</div>
		<div class="d-flex">
			<p class="mr-1">ショップ</p>
			<p><%= link_to @review.shop.shop_name,admin_shop_path %></p>
		</div>




	<div>
  <p>コメント件数：<%= @review.review_comments.count %></p>
  <%= link_to "コメント一覧へ",admin_review_review_comments_path(@review) %>
  <%= link_to "削除", admin_review_path(@review, @shop), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %>

  </div>
  </div>






