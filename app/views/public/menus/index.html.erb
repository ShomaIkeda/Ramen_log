<section class="wrapper flex">
	<div class="inner">

		<% if @menus.first %>
			<%= render 'public/menus/index', menus: @menus %>
			<%= paginate @menus %>
		<% else %>
			<h3>登録されているメニューはありません。</h3>
			<% if user_signed_in? %>
			<h2><%= link_to 'メニュー新規登録',new_shop_menu_path %></h2>
			<% end%>
		<% end %>
	</div>
</section>