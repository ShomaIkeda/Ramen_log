<%= form_with model:@menu, url: shop_menus_path do |f| %>
	<%= render 'layouts/error_messages', resource: @menu %>
	<div class="flex">
		
		<table class="user_menu_info menu_form">
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= f.label :menu, "メニュー" %></td>
					<td><%= f.text_field :menu %></td>
				</tr>
				
				<tr>
					<td><%= f.label :genre_id, "ジャンル" %></td>
					<td class="select_field"><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
				</tr>
			
				
			</tbody>
		</table>
		<div class="flex align-center pl5">
			<%= f.submit "投稿", class: "btn btn-primary" %>
		</div>
	</div>
<% end %>

