<section class="ml-2">
	<h2 class="section-ttl"><%= @user.nickname %>さんのページ</h2>
	<table class="table">
		<thead>
		
		<tbody>
			
			<tr>
				<td>ニックネーム</td>
				<td><%= @user.nickname %></td>
			</tr>	
				<td>会員ステータス</td>
				<td colspan="2">
					<% if @user.is_active? %>
						<span class="text-active">有効	</span>					
					<% else %>
						<span class="text-invalid">退会済み</span>
					<% end %>
				</td>
			</tr>
			
			
		</tbody>
	</table>
	
	<div>
		<h3>投稿一覧</h3>
		<% @reviews.each do |review| %>
		<div>
			<p><%= link_to review.title,shop_review_path(shop_id: review.shop_id, id: review.id) %></p>
		
		</div>
		
		<% end %>
		<%= paginate @reviews %>
	</div>
	
</section>