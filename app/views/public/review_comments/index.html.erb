<section class="wrapper flex">
  <div class="inner">
<table class = table>
    <thead></thead>
    <tbody>
        <th>ニックネーム</th>
        <th>コメント</th>
        <th>日付</th>
<% @review_comments.each do |review_comment| %>

  <tr>
    <td><%= review_comment.user.nickname %></td>
    <td><%= review_comment.comment %></td>
    <td><%= review_comment.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  
  <% end %>
  </tbody>
</table>