<div>
	<div>
		<div class="d-flex">
			<p class="mr-1">タイトル</p>
			<p><%= @review.title %></p>
		</div>
		<div class="d-flex">
			<p class="mr-1">食べたメニュー</p>
			<p><%= @review.eated_menu %></p>
		</div>
		<div class="d-flex">
			<p class="mr-1">コメント</p>
			<p><%= @review.comment %></p>
		</div>
		<div class="d-flex">
			<p class="mr-1">スコア</p>
			<p><%= @review.score %></p>
		</div>
		<div class="d-flex">
			<p class="mr-1">投稿者</p>
			<p><%= @review.user.email %></p>
		</div>
		<div class="d-flex">
			<p class="mr-1">ショップ</p>
			<p><%= @review.shop.shop_name %></p>
		</div>
	</div>
	
	<div>
  <p>コメント件数：<%= @review.review_comments.count %></p>
  <% @review.review_comments.each do |review_comment| %>
    
    <%= review_comment.user.name %>
    <%= review_comment.created_at.strftime('%Y/%m/%d') %><%= review_comment.comment %>
  <% end %>
</div>
<div>
  <%= form_with model: [@review, @review_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>
</div>